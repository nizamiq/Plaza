# Plaza MCP Platform - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Universal Scraper Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.0.36
SCRAPER_PROXY=

# Browser Automation Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080
BROWSER_ANTI_DETECTION=true

# Web Search Provider Configuration
# Exa (exa.ai)
EXA_API_KEY=
EXA_ENABLED=false

# Serper (serper.dev)
SERPER_API_KEY=
SERPER_ENABLED=false

# Perplexity (perplexity.ai)
PERPLEXITY_API_KEY=
PERPLEXITY_ENABLED=false
PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-online

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_CONCURRENT=5

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_MIN_TIMEOUT=1000
RETRY_MAX_TIMEOUT=30000
